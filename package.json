{
  "name": "mediawiki-support",
  "displayName": "MediaWiki Support",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mediawiki",
        "aliases": [
          "Mediawiki",
          "mediawiki"
        ],
        "extensions": [
          ".mediawiki"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "extension.addWebCitation",
        "title": "Add Web Citation"
      }
    ],
    "grammars": [
      {
        "language": "mediawiki",
        "scopeName": "text.html.mediawiki",
        "path": "./syntaxes/mediawiki.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.javascript": "javascript"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "webpack --mode=development --watch",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.15",
    "@types/glob": "^7.1.1",
    "@types/luxon": "^1.21.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/node-fetch": "^2.5.4",
    "@types/vscode": "^1.40.0",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.6.4",
    "vscode-test": "^1.2.2",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "luxon": "^1.21.3",
    "node-fetch": "^2.6.0"
  }
}
